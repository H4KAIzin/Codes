<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Codes.Menu">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Text="&#xf007;" FontSize="Large" FontFamily="{StaticResource FontAwesomeSolid}" Grid.Row="0" Grid.Column="0" />
        <Button Text="&#xf0c9;" FontSize="Large" FontFamily="{StaticResource FontAwesomeSolid}" Grid.Row="0" Grid.Column="1" />

        <Image Source="camiseta.png" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" Grid.Row="1" />
        <Label Text="Julho Camisas" FontSize="Large" HorizontalOptions="Center" Grid.Row="1" />
    </Grid>
</ContentPage>